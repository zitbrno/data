<!DOCTYPE html>
<html lang="cs">
	<head>

		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{{ _page.title }}</title>

		<!-- Bootstrap -->
		<link type="text/css" rel="stylesheet" href="{{ _site.baseURL }}resources/bootstrap/css/bootstrap.min.css" />
		<link type="text/css" rel="stylesheet" href="{{ _site.baseURL }}resources/font-awesome/css/font-awesome.min.css" />

		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->

		<script type="text/javascript">
			var _config = [];
			{% if _config.facebook %}
				_config['facebook'] = [];
			{% endif %}
			{% if _config.facebook.appID %}
				_config['facebook']['appID'] = '{{ _config.facebook.appID }}';
			{% endif %}
			{% if _config.facebook.locale %}
				_config['facebook']['locale'] = '{{ _config.facebook.locale }}';
			{% endif %}
			{% if _config.google %}
				_config['google'] = [];
			{% endif %}
			{% if _config.google.analyticsID %}
				_config['google']['analyticsID'] = '{{ _config.google.analyticsID }}';
			{% endif %}
		</script>

		{% if _config.google.analyticsID %}
			<script src="{{ __site.baseURL }}resources/javascript/google/analytics.js"></script>
		{% endif %}

	</head>
	<body>

		{% block content %}
			<h1>
				{% block header %}
					Hello, World!
				{% endblock header %}
			</h1>
		{% endblock content %}

		<script src="{{ __site.baseURL }}resources/bootstrap/js/bootstrap.min.js"></script>

		{% if _config.facebook.appID %}
			<div id="fb-root"></div>
			<script src="{{ __site.baseURL }}resources/javascript/facebook/sdk.js"></script>
		{% endif %}

	</body>
</html>
